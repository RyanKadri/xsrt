{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to API Server",
            "address": "127.0.0.1",
            "port": 9229,
            "sourceMaps": true,
            "restart": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test All",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args": ["--config=jasmine.json"],
            "runtimeArgs": ["--require", "./spec/support/init.js"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test Current File",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine",
            "args": [
                "${relativeFile}",
                "--config=jasmine.json"
            ],
            "runtimeArgs": ["--require", "./spec/support/init.js"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "tsc: watch - tsconfig.spec.json",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start API",
            "program": "${workspaceFolder}/packages/api/src/api-server.ts",
            "preLaunchTask": "tsc: build - packages/api/tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/packages/api/dist/api-server.js"
            ],
            "sourceMaps": true,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Decorators",
            "program": "${workspaceFolder}/packages/decorators/src/decorator-server.ts",
            "preLaunchTask": "tsc: build - packages/decorators/tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/packages/decorators/dist/decorator-server.js"
            ],
            "sourceMaps": true,
        }
    ],
    "compounds": [
        {
            "name": "Start Backend",
            "configurations": ["Start API", "Start Decorators"],
        }
    ]
}
