{
  "name": "xsrt",
  "version": "0.3.3",
  "description": "A Cross-Session Screen Recording tool (XSRT)",
  "repository": {
    "type": "git",
    "url": "https://github.com/RyanKadri/xsrt"
  },
  "sideEffects": false,
  "scripts": {
    "initialize": "npm install --no-optional && lerna bootstrap --hoist",
    "build:viewer": "webpack --config-name viewer-prod",
    "start:viewer": "webpack-dev-server --config-name viewer-dev",
    "build:backend": "webpack --config-name compile-backend",
    "build:backend:watch": "npm run build:backend -- --mode development --watch",
    "start:api": "npm run build:backend && npm run run:api",
    "run:api": "node ./dist/backend/api-server.bundle.js",
    "start:decorator": "npm run build:backend && npm run run:decorator",
    "run:decorator": "node ./dist/backend/decorator-server.bundle.js",
    "build:docker": "concurrently \"npm:build:backend:watch\" \"npm:start:viewer\"",
    "build:recorder": "tsc -b packages/recorder/tsconfig.package.json",
    "build:publish": "npm run build:recorder && npm run build:extension",
    "publish:all": "lerna publish --skip-git --yes from-git",
    "build:tools": "webpack --mode development --config-name bootstrap-scripts",
    "build:extension": "webpack --config-name compile-extension",
    "test": "node ./spec/support/launch.js",
    "test:coverage": "nyc ./node_modules/.bin/jasmine --config=jasmine.json",
    "test:watch": "nodemon -w packages --ignore '*/node_modules/**/*' -e ts,tsx --exec \"node ./spec/support/launch.js\"",
    "lint": "tslint --project tsconfig.spec.json",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker": "docker-compose up"
  },
  "author": "Ryan Kadri",
  "license": "",
  "optionalDependencies": {
    "@xsrt/extension": "^0.9.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.75",
    "@types/classnames": "^2.2.6",
    "@types/clean-webpack-plugin": "^0.1.2",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/jasmine": "^3.3.5",
    "@types/node": "^10.12.10",
    "@types/shortid": "0.0.29",
    "@types/ua-parser-js": "^0.7.32",
    "@types/webpack": "^4.4.17",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "dotenv": "^6.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jasmine": "^3.3.1",
    "lerna": "^3.19.0",
    "module-alias": "^2.2.0",
    "node-loader": "^0.6.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^4.3.12",
    "react-test-renderer": "^16.6.3",
    "source-map-support": "^0.5.10",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.18.0",
    "typescript": "^3.3.1",
    "webpack": "^4.35.3",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12",
    "tslib": "^1.9.3"
  }
}
